<%- include ('../partials/head') %> <%- include ('../partials/menu') %>

<main>
	<div class="container" style="margin-top: 1em">
		<%- include ('../partials/message') %>

		<h1>Search</h1>
		<form action="/search-results" method="GET">
			<div class="mb-3 form-group">
				<label for="file-name" class="form-label"> File Name: </label>
				<input type="text" id="file-name" name="file-name" class="form-control" />
			</div>

			<div class="mb-3 form-group">
				<label for="subject" class="form-label"> Subject: </label>
				<select class="form-select" id="subject">
					<option>Arts & Sciences</option>
					<option>Business</option>
					<option>Engineering & Applied Science</option>
					<option>Communication</option>
				</select>
			</div>

			<div class="mb-3 form-group">
				<label for="sort-by" class="form-label" style="margin-right: 1em"> Tags: </label>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="checkbox" value="" id="lecture-notes" />
					<label class="form-check-label" for="lecture-notes"> Lecture Notes </label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="checkbox" value="" id="articles" />
					<label class="form-check-label" for="articles"> Articles </label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="checkbox" value="" id="practice-tests" />
					<label class="form-check-label" for="practice-tests"> Practice Tests </label>
				</div>
			</div>

			<div class="mb-3 form-group">
				<label for="sort-by" class="form-label"> Sort By: </label>
				<select class="form-select" id="sort-by">
					<option>Recently Uploaded</option>
					<option>Rating, Descending</option>
					<option>Rating, Ascending</option>
				</select>
			</div>

			<input type="submit" value="Search" class="btn btn-primary" style="margin-top: 0.5em" />
		</form>
	</div>

	<hr style="margin: 2rem 5rem 1rem 5rem" />

	<div class="container" style="margin-top: 2em">
		<h3>Results</h3>
	</div>
</main>

<%- include ('../partials/footer') %>
