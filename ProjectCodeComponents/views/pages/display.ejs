    <div class = "row">
        <div class = "col"><h3><%- title %></h3></div>

        <div class = "col"><div>Liked: <%- likes %></div></div>
        <div class = "col">
            <%- liked %>
            <% if( liked == true ){ %>
                <form action="/unlike" method="POST">
                    <input type="hidden" name="id" value="<%- id %>" >
                    <button style="float:left" type="submit" class="btn btn-danger">Unlike</button>
                </form>
            <% }else{ %>
                <form action="/like" method="POST">
                    <input type="hidden" name="id" value="<%- id %>" >
                    <button style="float:left" type="submit" class="btn btn-primary">Like</button>
                </form>
            <% } %>

        </div>
    </div>

    <div class="card" "><img src=<%- link %> ></div>
    
    
